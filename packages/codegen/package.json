{
  "name": "@tailor-platform/codegen",
  "version": "0.1.0",
  "description": "CLI for generating everything needed in Tailor Platform application",
  "type": "module",
  "main": "index.js",
  "bin": {
    "codegen": "dist/cli.js"
  },
  "scripts": {
    "build": "pnpm run type-check && tsup",
    "ts:exec": "node --import @swc-node/register/esm-register",
    "type-check": "tsc --noEmit --incremental --pretty",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "execa": "^8.0.1",
    "gql-query-builder": "^3.8.0",
    "inflection": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc-node/register": "^1.8.0",
    "@tailor-platform/dev-config": "workspace:*",
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "prettier": "@tailor-platform/dev-config/prettier"
}
