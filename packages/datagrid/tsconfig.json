{
  "extends": "@tailor-platform/dev-config/typescript/react-library",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",
    "paths": {
      "baseUrl": ["."],
      "@*": ["./src/*"],
      "@tailor-platform/styled-system/*": [
        "./node_modules/@tailor-platform/styled-system/*",
      ],
      "@tailor-platform/design-systems/*": ["../design-systems/dist/*"],
    },
  },
}
