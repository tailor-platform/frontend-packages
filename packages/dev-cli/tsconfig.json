{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@cli/*": ["./src/cli/*"],
      "@script/*": ["./src/script/*"],
      "@builtin/*": ["./src/builtin/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
